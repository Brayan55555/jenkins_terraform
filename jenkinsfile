pipeline {
    agent {
        label "EC2_UBUNTU"
    }
    stages {
        stage('Build') {
            steps {
                echo "Hello World"
            }
        }
        stage('Plan') {
            steps {
                sh 'terraform init -input=false'
            }
        }
        stage('Apply') {
            steps {
                sh "terraform apply -input=false tfplan"
            }
        }
    }
}